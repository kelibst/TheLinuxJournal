<div class="container">
  <p id="notice"><%= notice %></p>

  <div class="show-container">
    <p class="py-medium">
      <strong class="show-title font-size-large">Title:</strong>
      <%= link_to "#{@article.title}", article_path(@article), class: "font-size-large text-uppercase" %>
    </p>
    
    <p>
      <strong class="show-description">Description:</strong>
      <%= @article.description %>
    </p>
    
    
    
  </div>
  <div class="show-button-container">
    <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-success" %> |
  <%= link_to 'Back', articles_path, class: "btn btn-primary"%>
  </div>
  
</div>
